html
  head
    block title
    block scripts
    include include/header
  body

    div(class="navbar")
      div(class="navbar-inner") 
        .logo
        h2 Good, bad & ugly
        if admin
          .container
            ul.nav
              li: a(href="/posts/today") Home
              if admin || dsclient
                 li.dropdown
                   a.dropdown-toggle(data-toggle="dropdown",href="#") Administration
                     b.caret
                   ul.dropdown-menu
                     li: a(href="/admin") Users

          .user
            if user
              span.username
                a(href="/profile/#{user.email}") #{user.email}
              .btn
                a(href="/logout") Logout
            else
              h2
                div(class="btn btn-primary")
                  a(href="/login") Please login!

    div(class="container")

      block content

