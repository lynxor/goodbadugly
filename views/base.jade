  head
    block title
    block scripts
    include include/header
  body

    .navbar.navbar-fixed-bottom
      .navbar-inner
        if user
          block menu
          ul.nav
             li.dropdown
               a.dropdown-toggle('data-toggle'="dropdown",href="#") Admin
                 b.caret
               ul.dropdown-menu
