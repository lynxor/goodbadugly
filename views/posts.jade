extends base

block title
  title Posts


block content
  #table_holder
    include posts_accordion

  form(action='/post', method='post')
    #post_modal.modal.hide.fade(tabindex="-1", role='dialog', 'aria-labelledby'='post_modal_label', 'aria-hidden'='true')
      .modal-header
        button.close(type='button', 'data-dismiss'='modal', 'aria-hidden'='true') x
        h3#post_modal_label Add a post
      .modal-body

          label(for='text')
          textarea.text(name='post[text]')

          label(for='type')
          select.type(name='post[type]')
            each type in types
              option(value='#{type}')= type
        .modal-footer
          button.btn('data-dismiss'='modal', 'aria-hidden'='true') Close
          input.btn.btn-primary(type='submit', value='submit')

    script(src='/public#{asset_token}/posts_public.js')

block menu
   a.btn.btn-primary('data-toggle'='modal', role='button', href='#post_modal')
    i.icon-plus-sign.icon-white
    span Post

