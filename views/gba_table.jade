#accordion1.accordion
  each group in groups
    .accordion-group
      .accordion-heading
        a.accordion-toggle('data-toggle'='collapse', 'data-parent'='#accordion1', href='##{group.name}')= group.name
      div(id='#{group.name}').accordion-body.collapse
        .accordion-inner
          ul
            each posto in group.posts
              dl
                dt #{posto.user}
                dd
                  p= posto.text
                  a(href='/post/like/#{posto._id}') Like (#{posto.likes.length})


